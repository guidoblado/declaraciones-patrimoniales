@model SRDP.WebUI.Models.OtroIngresoModel
@{
    Layout = null;
}

@using (Html.BeginForm("Save", "OtrosIngresos", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.DeclaracionID)

    <div class="form-group">
        @Html.LabelFor(model => model.Concepto, new { @class = "control-label" })
        @Html.EditorFor(model => model.Concepto, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Concepto, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.IngresoMensual, new { @class = "control-label" })
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                @Html.EditorFor(model => model.IngresoMensual, new { htmlAttributes = new { @class = "form-control mb-9" } })
                @Html.ValidationMessageFor(model => model.IngresoMensual, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Aceptar" class="btn btn-primary" />
        <div class="btn btn-secondary" onclick="return CloseForm()">Cancelar</div>
    </div>
}


