@model SRDP.WebUI.Models.VehiculoModel
@{
    Layout = null;
}

@using (Html.BeginForm("Save", "Vehiculos", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.DeclaracionID)

    <div class="form-group">
        @Html.LabelFor(model => model.Marca, new { @class = "control-label" })
        @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TipoVehiculo, new { @class = "control-label" })
        @Html.EditorFor(model => model.TipoVehiculo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TipoVehiculo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Anio, new { @class = "control-label" })
        @Html.EditorFor(model => model.Anio, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Anio, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ValorAproximado, new { @class = "control-label" })
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                @Html.EditorFor(model => model.ValorAproximado, new { htmlAttributes = new { @class = "form-control mb-9" } })
                @Html.ValidationMessageFor(model => model.ValorAproximado, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SaldoDeudor, new { @class = "control-label" })
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                @Html.EditorFor(model => model.SaldoDeudor, new { htmlAttributes = new { @class = "form-control mb-9" } })
                @Html.ValidationMessageFor(model => model.SaldoDeudor, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Banco, new { @class = "control-label" })
        @Html.EditorFor(model => model.Banco, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Banco, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Aceptar" class="btn btn-primary" />
        <div class="btn btn-secondary" onclick="return CloseForm()">Cancelar</div>
    </div>
}


