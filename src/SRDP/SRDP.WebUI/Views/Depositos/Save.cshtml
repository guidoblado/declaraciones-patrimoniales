@model SRDP.WebUI.Models.DepositoModel
@{
    Layout = null;
}

@using (Html.BeginForm("Save", "Depositos", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.DeclaracionID)

    <div class="form-group">
        @Html.LabelFor(model => model.Institucion, new { @class = "control-label" })
        @Html.EditorFor(model => model.Institucion, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Institucion)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TipoDeCuenta, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.TipoDeCuenta, Model.TiposDeCuenta, "-Seleccionar-", new { @class = "form-control" })
        @*@Html.EditorFor(model => model.TipoDeCuenta, new { htmlAttributes = new { @class = "form-control" } })*@
        @Html.ValidationMessageFor(model => model.TipoDeCuenta)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Saldo, new { @class = "control-label" })
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                @Html.EditorFor(model => model.Saldo, new { htmlAttributes = new { @class = "form-control mb-9" } })
                @Html.ValidationMessageFor(model => model.Saldo)
            </div>
            
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Aceptar" class="btn btn-primary" />
        <div class="btn btn-secondary" onclick="return CloseForm()" >Cancelar</div>
    </div>
}
