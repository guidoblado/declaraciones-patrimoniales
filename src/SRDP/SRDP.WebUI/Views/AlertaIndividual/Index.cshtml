@model SRDP.WebUI.ModelViews.AlertaIndividualModelView

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.5.4/css/buttons.bootstrap4.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/scroller/1.5.0/css/scroller.bootstrap4.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.bootstrap4.min.css" />

<div class="container">
    <h4 class="page-title">Alertas Individuales</h4>
    <div class="row">
        <div class="col-md-3">
            @using (Html.BeginForm("Index", "AlertaIndividual", FormMethod.Get))
            {
                @Html.AntiForgeryToken()

                <div class="card">
                    <div class="card-body">
                        <div class="form">
                            @Html.LabelFor(x => Model.ReglaAlertaParameters.Reglas, htmlAttributes: new { @class = "control-label" })
                            <div>
                                @Html.DropDownListFor(x => Model.ReglaAlertaParameters.ReglaID, new SelectList(Model.ReglaAlertaParameters.Reglas, "Value", "Text"), htmlAttributes: new { @class = "form-control", @id = "SelectedRegla", onchage = "RefreshForm(this)" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => Model.ReglaAlertaParameters.ReglaAlerta.Gestion, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.DisplayFor(model => model.ReglaAlertaParameters.ReglaAlerta.Gestion)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => Model.ReglaAlertaParameters.ReglaAlerta.Descripcion, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.DisplayFor(model => model.ReglaAlertaParameters.ReglaAlerta.Descripcion)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => Model.ReglaAlertaParameters.ReglaAlerta.Monto, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.DisplayFor(model => model.ReglaAlertaParameters.ReglaAlerta.Monto)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => Model.ReglaAlertaParameters.ReglaAlerta.Operador, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.DisplayFor(model => model.ReglaAlertaParameters.ReglaAlerta.Operador)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => Model.ReglaAlertaParameters.ReglaAlerta.Porcentaje, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.DisplayFor(model => model.ReglaAlertaParameters.ReglaAlerta.Porcentaje)
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="card-action">
                            <button class="btn btn-secondary my-2 my-sm-0 pull-left" type="submit" value="Buscar">Buscar</button>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">

                    <table class="table table-striped table-bordered table-sm" id="alertaIndividualTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].NombreCompleto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].Cargo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].Area)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].UbicacionGeografica)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].CentroDeCosto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].Rol)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].EstadoDeclaracion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].PatrimonioActual)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].PatrimonioGestionAnterior)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].DiferenciaPatrimonio)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Data[0].VariacionPorcentual)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Data)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cargo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Area)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UbicacionGeografica)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CentroDeCosto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rol)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EstadoDeclaracion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PatrimonioActual)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PatrimonioGestionAnterior)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiferenciaPatrimonio)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VariacionPorcentual)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>



@section scripts{
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>



    <script src="https://cdn.datatables.net/buttons/1.5.4/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.4/js/buttons.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.4/js/buttons.flash.min.js"></script>

    <script src="https://cdn.datatables.net/buttons/1.5.4/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.4/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.4/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/scroller/1.5.0/js/dataTables.scroller.js"></script>

    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>

    <script>
        function RefreshForm() {
            $("#AlertaIndividual").submit();
        }
    </script>

    <script>
        var dataTable;
        $(document).ready(function () {
            dataTable = $("#alertaIndividualTable").DataTable({
                dom: 'Bfrtip',
                lengthChange: false,
                buttons: ['copy', 'excel', 'pdf'],
                scrollx: true,
                searching: false,
                //dom: "tip",
                //searching: false,
                //language: {

                //    "emptyTable": "No data found, Please click on <b>Add New</b> Button"
                //}
            })
        });
        dataTable.buttons().container()
            .appendTo('#alertaIndividualTable_wrapper .col-md-6:eq(0)');
    </script>
}
