@model SRDP.WebUI.Models.ValorNegociableModel
@{
    Layout = null;
}

@using (Html.BeginForm("Save", "ValoresNegociables", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.DeclaracionID)

    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Descripcion)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TipoValor, new { @class = "control-label" })
        @Html.EditorFor(model => model.TipoValor, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TipoValor)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ValorAproximado, new { @class = "control-label" })
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                @Html.EditorFor(model => model.ValorAproximado, new { htmlAttributes = new { @class = "form-control mb-9" } })
                @Html.ValidationMessageFor(model => model.ValorAproximado)
            </div>

        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Aceptar" class="btn btn-primary" />
        <div class="btn btn-secondary" onclick="return CloseForm()">Cancelar</div>
    </div>
}



