@model SRDP.WebUI.Models.DeudaBancariaModel
@{
    Layout = null;
}

@using (Html.BeginForm("Save", "DeudasBancarias", FormMethod.Post, new { onSubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.DeclaracionID)

    <div class="form-group">
        @Html.LabelFor(model => model.InstitucionFinanciera, new { @class = "control-label" })
        @Html.EditorFor(model => model.InstitucionFinanciera, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.InstitucionFinanciera, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Tipo, new { @class = "control-label" })
        @Html.DropDownListFor(model => model.Tipo, Model.TiposDeDeuda, "-Seleccionar-", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Monto, new { @class = "control-label" })
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control mb-9" } })
                @Html.ValidationMessageFor(model => model.Monto, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Aceptar" class="btn btn-primary" />
        <div class="btn btn-secondary" onclick="return CloseForm()">Cancelar</div>
    </div>
}


