<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Registro de Declaraciones Patrimoniales</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container body-content">
        @if (TempData["UserMessage"] != null)
        {
            var message = (SRDP.WebUI.Models.MessageModel)TempData["UserMessage"];
            <div class="alert @message.CssClassName">
                <strong>@message.Title</strong>
                @message.Message
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistema de Registro de Declaraciones Patrimoniales LBC - v.1.0.4</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scripts")
    <script src="~/Scripts/notify.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
