@model SRDP.WebApp.Models.DeclaracionModel

@{
    ViewData["Title"] = "Details";
}

<div class="main-panel">
    <div class="content">
        <div class="page-inner">
            <h2>Formulario de Declaración Patrimonial</h2>
            @*Datos Personales*@
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Datos Personales</div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-2 font-weight-bold col-form-label-sm">
                                    @Html.DisplayNameFor(model => model.NombreCompleto)
                                </div>
                                <div class="col-sm-4 form-control-sm">
                                    @Html.DisplayFor(model => model.NombreCompleto)
                                </div>
                                <div class="col-sm-2 font-weight-bold col-form-label-sm">
                                    @Html.DisplayNameFor(model => model.CedulaIdentidad)
                                </div>
                                <div class="col-sm-4 form-control-sm">
                                    @Html.DisplayFor(model => model.CedulaIdentidad)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2 font-weight-bold col-form-label-sm">
                                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                                </div>
                                <div class="col-sm-4 form-control-sm">
                                    @Html.DisplayFor(model => model.FechaNacimiento)
                                </div>
                                <div class="col-sm-2 font-weight-bold col-form-label-sm">
                                    @Html.DisplayNameFor(model => model.EstadoCivil)
                                </div>
                                <div class="col-sm-4 form-control-sm">
                                    @Html.DisplayFor(model => model.EstadoCivil)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*Depositos*@
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Depósitos</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            Institución
                                        </th>
                                        <th scope="col">
                                            Tipo de Cuenta
                                        </th>
                                        <th scope="col">
                                            Saldo
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Depositos)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Institucion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoDeCuenta)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Saldo)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*Inmuebles*@
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Inmuebles</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            Dirección
                                        </th>
                                        <th scope="col">
                                            Tipo de Inmueble
                                        </th>
                                        <th scope="col">
                                            Porc. Participación
                                        </th>
                                        <th scope="col">
                                            Valor Comercial
                                        </th>
                                        <th scope="col">
                                            Saldo Hippoteca
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Inmuebles)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Direccion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoDeInmueble)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PorcentajeParticipacion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ValorComercial)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SaldoHipoteca)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*Vehiculos*@
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Veículos</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            Marca
                                        </th>
                                        <th scope="col">
                                            Tipo de vehículo
                                        </th>
                                        <th scope="col">
                                            Año
                                        </th>
                                        <th scope="col">
                                            Valor Aproximado
                                        </th>
                                        <th scope="col">
                                            Saldo Deudor
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Vehiculos)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Marca)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoVehiculo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Anio)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ValorAproximado)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SaldoDeudor)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*Valores Negociables*@
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Valores Negociables</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            Descripción
                                        </th>
                                        <th scope="col">
                                            Tipo Valor
                                        </th>
                                        <th scope="col">
                                            Valor Aproximado
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ValoresNegociables)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoValor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ValorAproximado)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*Otros Ingresos*@
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Otros Ingresos</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            Concepto
                                        </th>
                                        <th scope="col">
                                            Ingreso Mensual
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OtrosIngresos)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Concepto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IngresoMensual)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            @*Deudas*@
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Deudas en entidaes financieras</div>
                        </div>
                        <div class="card-body">
                            <table class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
                                <thead>
                                    <tr>
                                        <th scope="col">
                                            Institución Financiera
                                        </th>
                                        <th scope="col">
                                            Monto
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DeudasBancarias)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InstitucionFinanciera)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Monto)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-2 font-weight-bold col-form-label-sm">
                                    <label for="nombreCompleto">Fecha de Llenado</label>
                                </div>
                                <div class="col-sm-4 form-control-sm">
                                    @Html.DisplayFor(model => model.FechaLlenado)
                                </div>
                                <div class="col-sm-2 font-weight-bold col-form-label-sm">
                                    @Html.DisplayNameFor(model => model.PatrimonioNeto)
                                </div>
                                <div class="col-sm-4 form-control-sm fa-bold">
                                    <strong>@Html.DisplayFor(model => model.PatrimonioNeto)</strong>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

