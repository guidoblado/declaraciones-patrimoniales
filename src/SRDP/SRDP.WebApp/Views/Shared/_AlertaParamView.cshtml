@model SRDP.WebApp.Models.AlertaParametersModel

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form class="form-inline" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Monto" class="control-label"></label>
                        <input asp-for="Monto" class="form-control" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <div class="form-radio-label">
                            <input asp-for="Operador" class="form-radio-input" type="radio" value="O" checked="checked" />
                            <span class="form-radio-sign">O</span>
                        </div>
                        <div class="form-radio-label ml-3">
                            <input asp-for="Operador" class="form-radio-input" type="radio" value="Y" />
                            <span class="form-radio-sign">Y</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Porcentaje" class="control-label"></label>
                        <input asp-for="Porcentaje" class="form-control" />
                        <span asp-validation-for="Porcentaje" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-secondary my-2 my-sm-0 pull-left" type="submit" value="Buscar">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
